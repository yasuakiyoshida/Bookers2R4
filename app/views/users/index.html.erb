<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: current_user, follower: @follower, followed: @followed %>
      <!-- user一覧ページのサイドバーはログインユーザーなのでuser: current_user-->
      <%= render 'layouts/follow_form', user: current_user, follower: @follower, followed: @followed %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <%= render 'index',users: @users, follower: @follower, followed: @followed %>
    </div>
  </div>
</div>