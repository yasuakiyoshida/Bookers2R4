<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user, follower: @follower, followed: @followed %>
      <!-- 投稿一覧ページのサイドバーはログインユーザーなのでuser: current_user-->
      <!--　必要か? -->
      <%= render 'layouts/follow_form', user: current_user, follower: @follower, followed: @followed %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'index', books: @books%>
    </div>
  </div>
</div>